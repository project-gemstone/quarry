# description	: Show differences among files

name=diffutils
version=3.7
release=1
source=("https://ftp.gnu.org/pub/gnu/$name/$name-$version.tar.xz")
sha256sums=('7b12cf8aea1b9844773748f72272d9c6a38adae9c3c3a8c62048f91fb56c60b76035fa5f51665dceaf2cfbf1d1f4a3efdcc24bf47a5a16ff4350543314b12c9c')

build() {
	cd "$SRC"/$name-$version

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls

	make

	make DESTDIR="$PKG" install
}
