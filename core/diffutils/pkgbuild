# description	: Show differences among files

name=diffutils
version=3.7
release=1
source="https://ftp.gnu.org/pub/gnu/$name/$name-$version.tar.xz"

build() {
	cd "$SRC"/$name-$version

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls

	make

	make DESTDIR="$PKG" install
}
