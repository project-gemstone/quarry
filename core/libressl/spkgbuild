# description	: Version of the TLS/crypto stack forked from OpenSSL

name=libressl
version=3.0.0
release=1
source=("https://ftp.openbsd.org/pub/OpenBSD/LibreSSL/$name-$version.tar.gz")
sha256sums=(01d9100457d373947d3164a73cc285438bb12fe28ab065cbe2835ad64dcc3c76)

build() {
	cd "$SRC"/$name-$version

	autoreconf -fi

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--with-openssldir=/etc/ssl

	make

	make DESTDIR="$PKG" install
}
