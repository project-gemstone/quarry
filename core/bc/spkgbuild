# description	: An arbitrary precision numeric processing language (calculator)

name=bc
version=2.1.3
release=1
source="https://github.com/gavinhoward/bc/archive/$version.tar.gz"
sha256sums=('96b01cf03b356a6472c7759e232bdfd24b07c190cc0e06dfae0ce00114bfd9bf')

build() {
	cd "$SRC"/$name-$version

	PREFIX=/usr ./configure.sh --disable-nls

	make PREFIX=/usr

	make PREFIX=/usr DESTDIR="$PKG" install

	rm -rf "$PKG"/usr/share/locale
}
