# description	: GNU utilities to locate files

name=findutils
version=4.6.0
release=1
source1="http://ftp.gnu.org/gnu/$name/$name-$version.tar.gz" 
source2=findutils-makedev.patch 
source3=findutils-fflush.patch

build() {
	cd "$SRC"/$name-$version

	sed -i '/^SUBDIRS/s/locate//' Makefile.in

	if [ "$BOOTSTRAP" = "yes" ]; then
		cat >config.cache <<EOF
gl_cv_func_wcwidth_works=yes
ac_cv_func_fnmatch_gnu=yes
EOF
		BUILDFLAGS="$BUILDFLAGS --cache-file=config.cache"
	fi

	patch -Np1 -i ../findutils-makedev.patch
	patch -Np1 -i ../findutils-fflush.patch

	autoreconf -vif

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--without-python \
		--disable-nls

	make -j1 -C locate dblocation.texi

	make -j1

	make -j1 DESTDIR="$PKG" install
}
