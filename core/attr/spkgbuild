# description	: Utilities for managing filesystem extended attributes

name=attr
version=2.4.48
release=1
source="https://download.savannah.gnu.org/releases/$name/$name-$version.tar.gz"

build() {
	cd "$SRC"/$name-$version

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--libdir=/usr/lib \
		--libexecdir=/usr/lib \
		--sysconfdir=/etc

	make

	make DESTDIR="$PKG" install
}
