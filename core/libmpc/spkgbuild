# description	: Library for the arithmetic of complex numbers with arbitrarily high precision

name=libmpc
version=1.1.0
release=1
source=("http://ftp.gnu.org/gnu/mpc/mpc-$version.tar.gz")
sha256sums=(6985c538143c1208dcb1ac42cedad6ff52e267b47e5f970183a3e75125b43c2e)

build() {
	cd "$SRC"/mpc-$version

	EGREP=egrep ./configure $BUILDFLAGS --prefix=/usr --with-sysroot="$SYSROOT_DIR" --enable-shared

	make

	make DESTDIR="$PKG" install
}
