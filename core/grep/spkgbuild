# description	: Searches input files for lines containing a match to a specified pattern

name=grep
version=3.3
release=1
source="http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz"

build() {
	cd "$SRC"/$name-$version

	./configure $BUILDFLAGS \
		--prefix=/usr

	make

	make DESTDIR="$PKG" install
}
