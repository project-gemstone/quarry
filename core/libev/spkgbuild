# description	: A full-featured and high-performance event loop

name=libev
version=4.31
release=1
source=("http://dist.schmorp.de/$name/$name-$version.tar.gz")
sha256sums=(ed855d2b52118e32c0c1a6a32bd18c97f9e6711ca511f5ee12de3b9eccc66e5a)

build() {
	cd "$SRC"/$name-$version

	libtoolize --force && aclocal -I m4 && autoheader && autoconf && automake --add-missing

	./configure $BUILDFLAGS \
		--prefix=/usr \
		--disable-nls

	make

	make DESTDIR="$PKG" install

	rm "$PKG"/usr/include/event.h
}
