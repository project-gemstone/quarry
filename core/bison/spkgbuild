# description	: The GNU general-purpose parser generator

name=bison
version=3.4.2
release=1
source=("http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz")
sha256sums=('0ab6c55dd86a92ed561972ba15b9b70a8b9f75557f896446c82e8b36e473ee04')

build() {
	cd "$SRC"/$name-$version

	M4=m4 \
		./configure $BUILDFLAGS \
		--prefix=/usr \
		--datadir=/usr/share \
		--disable-nls

	make

	make DESTDIR="$PKG" install -j1
}
