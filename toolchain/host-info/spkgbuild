# description	: Displays and injects information about the toolchain and build host.

name=host-info
version=0.0.2
release=1
source=()

build() {
  msg "Preamble...\n\n"

  env

  env >$TOOLS_DIR/toolchain.env
  
  echo "TOOLCHAIN_VERSION=$version" >$TOOLS_DIR/toolchain.version
  
  ln -sf usr/bin $TOOLS_DIR/bin
	ln -sf usr/bin $TOOLS_DIR/sbin
	ln -sf bin $TOOLS_DIR/usr/sbin
	ln -sf usr/lib $TOOLS_DIR/lib
  ln -sf usr/lib $TOOLS_DIR/lib64
  
  install -d -m1777 $TOOLD_DIR/tmp
  
  install -d -m1777 $TOOLS_DIR/var/{tmp,spool/mail}

  touch $PKG/empty
}
